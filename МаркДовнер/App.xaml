             xmlns:local="clr-namespace:МаркДовнер"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Подключение стилей для TextBox -->
            <ResourceDictionary.MergedDictionaries>
